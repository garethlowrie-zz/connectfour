{
	"compilerOptions": {
		"target": "es5", 						// Specify ECMAScript target version.
		"module": "esnext", 					// Specify module code generation.
		"jsx": "react", 						// Support JSX in .tsx files: "React" or "Preserve"
		"allowJs": true, 						// Allow JavaScript files to be compiled.
		"moduleResolution": "node", 			// Use Node.JS over Classic
		"esModuleInterop": true,				// Emit __importStar and __importDefault helpers for runtime babel ecosystem compatibility and enable --allowSyntheticDefaultImports for typesystem compatibility.
		"noUnusedLocals": true, 				// Report errors on unused locals.
		"allowSyntheticDefaultImports": true, 	// Allow default imports from modules with no default export. This does not affect code emit, just typechecking.
		"strict": true, 						// Enable all strict type checking options.
		"baseUrl": "./src", 					// Base directory to resolve non-relative module names.
		"outDir": "./dist/", 					// Redirect output structure to the directory.
		"lib": ["es2015", "es2016", "es2017", "es2018", "esnext", "dom"] // List of library files to be included in the compilation.
	},
	"include": ["./src/**/*", "./modules/**/*"]
}
